<Addin id          = "UnitTesting.UnitTestExplorer"
       namespace   = "MonoDevelop"
       name        = "Unit Test Explorer"
       author      = "Lluis Sanchez, John Luke, Dale Ragan"
       copyright   = "MIT X11"
       url         = "http://monodevelop.com"
       description = "Allows you to visually explore and run your unit tests in the MonoDevelop IDE.  Support for testing frameworks are provided as separate add-ins."
	   category    = "Testing"
       version     = "0.0.0">
	
	<Runtime>
		<Import assembly="MonoDevelop.UnitTesting.UnitTestExplorer.dll"/>
	</Runtime>
	
	<Dependencies>
		<Addin id="Core" version="2.7"/>
		<Addin id="Ide" version="2.7"/>
	</Dependencies>
	
	<Extension path = "/MonoDevelop/Ide/Pads">
		<SolutionPad id = "MonoDevelop.UnitTesting.UnitTestExplorer.Gui.UnitTestExplorerPad" defaultLayout="UnitTesting" defaultPlacement = "Middle" defaultStatus="AutoHide" _label = "Unit Test Explorer" icon = "unit-test-explorer-pad-icon" class = "MonoDevelop.UnitTesting.UnitTestExplorer.Gui.UnitTestExplorerPad">
			<NodeBuilder id = "UnitTestNode" class = "MonoDevelop.UnitTesting.UnitTestExplorer.Gui.UnitTestNodeBuilder"/>
		</SolutionPad>
	</Extension>
	
	<Extension path="/MonoDevelop/Ide/WorkbenchLayouts">
		<Layout id="UnitTesting" _name="Unit Testing">
			<LayoutPad id="MonoDevelop.UnitTesting.UnitTestExplorer.Gui.UnitTestExplorerPad" status="Dockable"/>
		</Layout>
	</Extension>
	
	<Extension path = "/MonoDevelop/Core/StockIcons">
		<StockIcon stockid = "unit-test-explorer-pad-icon" resource = "unit-test-explorer-icon-16.png" size="Menu"/>
	</Extension>
	
</Addin>
